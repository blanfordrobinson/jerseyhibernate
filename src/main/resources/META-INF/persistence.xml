<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:DerbyDB/hibernate;create=true;user=sa;password=password" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="password" />
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSevenDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />

			<!-- Not sure why we need this, but query.setFirstResult and query.setMaxResults
			     does not work without it.
			     See - https://forum.hibernate.org/viewtopic.php?p=2204438&sid=111f7e8435ac5c2ab521325ad04fa7ab -->
			<property name="hibernate.jdbc.use_scrollable_resultset" value="false" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
	<persistence-unit name="oracle" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@oradev:1521:otdlvy" />
			<property name="javax.persistence.jdbc.user" value="mailman" />
			<property name="javax.persistence.jdbc.password" value="g00dt1m3s" />
			<property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />

			<!-- Not sure why we need this, but query.setFirstResult and query.setMaxResults
			     does not work without it.
			     See - https://forum.hibernate.org/viewtopic.php?p=2204438&sid=111f7e8435ac5c2ab521325ad04fa7ab -->
			<property name="hibernate.jdbc.use_scrollable_resultset" value="false" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>